@model IEnumerable<WorkAppp.Models.OrderR>
@{
    ViewData["Title"] = "Index";
    var i = 1;
}





<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form asp-action="AddProduct" asp-controller="ShopingCard" method="post">
            <h2 class="alert alert-success text-center">Order Add</h2>
            <h4 class="alert alert-info">@ViewBag.msg</h4>
            <div class="form-group">
                <label>Tabile No</label>
                <input type="text" class="form-control" name="tableNo" value="" />
            </div>
            <div class="form-group">
                <label>Order Number</label>
                <input type="text" class="form-control" name="OrderNo" value="" />
            </div>

            <div class="form-group">
                <label>Order Date</label>
                <input type="date" class="form-control" name="OderDate" value="" />
            </div>
            <div class="form-group">
                <label>Order Type</label>
                <input type="text" class="form-control" name="orderType" value="" />
            </div>
            <div class="form-group">

                <label>Order Status</label>
                <input type="text" class="form-control" name="OrderStutas" value="" />
            </div>

            <div class="form-group">

                <label>Payment Type</label>
                <input type="text" class="form-control" name="paymentType" value="" />
            </div>
            <div class="form-group">
                <label>Payment Amount</label>
                <input type="number" class="form-control" name="paymentAmount" value="" />
            </div>

            <div class="form-group">

                <input type="submit" class="form-control btn btn-primary" value="Save" />
            </div>

        </form>
    </div>
</div>
<br /><br />
@if (Model != null)
{
    <table class="table table-bordered table-responsive table-hover">
        <thead>
            <tr>
                <td>SL No.</td>
                <td>TableNo</td>
                <td>Order Number</td>
                <td>Order Date</td>
                <td>Order Type</td>
                <td>Order Status</td>
                <td>Payment Type</td>
                <td>Payment Amount</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@i.</td>
                    <td>@p.TableNo</td>
                    <td>@p.OrderNumber</td>
                    <td>@p.OrderDate</td>
                    <td>@p.OrderType</td>
                    <td>@p.PaymentAmount</td>
                    <td>@p.PaymentType</td>
                    <td>@p.StatusType</td>
                </tr>
                i++;
            }
        </tbody>
    </table>

}

